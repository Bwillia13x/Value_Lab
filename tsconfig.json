{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    "outDir": "dist",
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "__tests__/**/*.ts"]
} 